#!/bin/bash


curr_dir()
{
    echo $(expand_path "$(dirname ${BASH_SOURCE[0]})");
}

expand_path()
{
    pushd "$1" &> /dev/null
    echo `pwd -P`
    popd &> /dev/null
}


do_link()
{
    echo dotfiles dir is:
    dotfiles_dir=$(expand_path "$(curr_dir)/../");
    links=(
        bin
        lib
        install
    )

    for link in ${links[*]}
    do
        echo linking ${dotfiles_dir}/$link
        ln -s ${dotfiles_dir}/$link ~/$link
    done
}

do_link

