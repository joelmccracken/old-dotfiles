#!/usr/bin/env ruby-2.0
# -*- mode: ruby -*-



# symlinks the ~/Downloads directory into an ~/Inbox directory
# tries to preserve content of what was originally in ~/Downloads

require 'fileutils'


inbox_path = File.expand_path("~/Inbox")
downloads_path = File.expand_path("~/Downloads")

FileUtils.mkdir_p inbox_path

FileUtils.mv Dir.glob(File.join downloads_path, "*"), inbox_path

`sudo rm -rf #{downloads_path}`
FileUtils.ln_s inbox_path, downloads_path

